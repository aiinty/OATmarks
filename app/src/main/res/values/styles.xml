<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.OatMarks.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_ripple</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">72dp</item>

        <item name="android:button">@null</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="Widget.OatMarks.RadioButton.Night" parent="Widget.OatMarks.RadioButton">
        <item name="android:background">@drawable/radio_button_ripple</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/proximanova_regular</item>
    </style>

    <style name="Header1" parent="TextContent">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Header2" parent="TextContent">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Header3" parent="TextContent">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Header4" parent="TextContent">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Header5" parent="TextContent">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Header6" parent="TextContent">
        <item name="android:textSize">8sp</item>
    </style>

</resources>